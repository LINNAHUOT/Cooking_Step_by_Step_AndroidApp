<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.example.cookingstepbystep">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/img_welcome"
        android:label="CookingStepbyStep"
        android:roundIcon="@drawable/img_welcome"
        android:supportsRtl="true"
        android:theme="@style/Theme.CookingStepbyStep">

        <activity android:name=".WelcomeAcctivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".CookingStepActivity"/>
        <activity android:name=".FoodActivity"/>
        <activity android:name=".DrinkActivity"/>
        <activity android:name=".FriedActivity"/>
        <activity android:name=".SoupActivity"/>




    </application>

</manifest>